

<header class="panel-cover <% if (page.layout == 'post' || page.layout == 'page'){ %>panel-cover--collapsed<% } %>" style="background-image: url('/img/vno/background-cover.jpg')">
	<div class="panel-main">

		<div class="panel-main__inner panel-inverted">
			<div class="panel-main__content">

				<a href="/" title="前往 <%=theme.author%> 的主页" class="blog-button"><img lazy-src="<%= theme.avatar%>" class="js-avatar panel-cover__logo logo"  width="80" alt="<%= theme.title %> logo" /></a>
				<h1 class="panel-cover__title panel-title"><a href="/#blog" title="link to homepage for <%= theme.title %>" class="blog-button"><%= theme.title %></a></h1>
				<%if (theme.subtitle){%>
				<span class="panel-cover__subtitle panel-subtitle"><%=theme.subtitle%></span>

				<%}%>
				<hr class="panel-cover__divider" />
				<p class="panel-cover__description"><%=theme.description%> </p>
				<hr class="panel-cover__divider panel-cover__divider--secondary" />

				<% if (theme.welcome_message) {%>
				<p class="panel-cover__description">
					<%=theme.welcome_message%>

					 </p>
				<% } %>

				<div class="navigation-wrapper">
					<div>
						<nav class="cover-navigation cover-navigation--primary">
							<ul class="navigation">
								<% for( item in theme.nav){ %>
								<li class="navigation__item"><a href="<%- url_for(theme.nav[item].url) %>" target="_blank" title="<%=theme.nav[item].description%>"><%=theme.nav[item].title%></a></li>
								<% } %>
							</ul>
						</nav>
					</div>

					<div>
						<%- partial('social') %>
					</div>

				</div>
			</div>
		</div>

		<% if (theme.cover_color) {%>
		<div class="panel-cover--overlay cover-<%=theme.cover_color%>"></div>
		<% }else{ %>
		<div class="panel-cover--overlay cover-disabled"></div>
		<% } %>
	</div>
</header>





